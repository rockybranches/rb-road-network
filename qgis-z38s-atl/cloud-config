#cloud-config

package_update: true
package_upgrade: true
packages:
  - qgis
  - xfce4
  - xfce4-goodies
  - lightdm
  - curl

runcmd:
  # Install Tailscale using the specified installation script
  - curl -fsSL https://tailscale.com/install.sh | sh
  # Setup and enable graphical interface
  - systemctl enable lightdm
  - systemctl set-default graphical.target

users:
  - name: user
    sudo: ALL=(ALL) NOPASSWD:ALL
    groups: users, admin
    home: /home/user
    shell: /bin/bash
    ssh-authorized-keys:
      - ssh-rsa AAAAB3Nza...yourkeyhere...
